<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ('../partials/head')%>
  </head>
  <body>
    <div class="g-user-reg-area">
      <div class="container">
        <div class="row">
          <div class="col-md-5 mx-auto">
            <div class="text-center text-black-50 my-3">
              <h3 class="text-white">User Registrations</h3>
            </div>
            <div class="g-user-reg-main">
              <form method="post" action="<%= actionRoute %>">
                <div class="text-center pt-3">
                  <p class="error-message text-danger"><%= errorMessage %></p>
                </div>
                <div class="form-group mb-2">
                  <label for="firstName"
                    >First Name
                    <small
                      class="input-error-message text-danger ms-auto float-end"
                      ><%= errors?.firstName %></small
                    >
                    <input
                      class="<%= errors?.firstName ? 'input-error form-control text-white' : ' form-control text-white' %>"
                      type="text"
                      name="firstName"
                      value="<%= values.firstName %>"
                      placeholder="First Name"
                    />
                  </label>
                </div>

                <div class="form-group mb-2">
                  <label for="lastName"
                    >Last Name
                    <small class="input-error-message text-danger float-end"
                      ><%= errors?.lastName %></small
                    >
                    <input
                      class="<%= errors?.lastName ? 'input-error form-control text-white' : ' form-control text-white' %>"
                      type="text"
                      name="lastName"
                      value="<%= values.lastName %>"
                      placeholder="Last Name"
                    />
                  </label>
                </div>

                <div class="form-group mb-2">
                  <label for="email"
                    >Email
                    <small class="input-error-message text-danger float-end"
                      ><%= errors?.email %></small
                    >

                    <input
                      class="<%= errors?.email ? 'input-error form-control text-white' : ' form-control text-white' %>"
                      type="text"
                      name="email"
                      value="<%= values.email %>"
                      placeholder="Email"
                    />
                  </label>
                </div>

                <div class="form-group mb-2">
                  <label for="password"
                    >Password
                    <small class="input-error-message text-danger float-end"
                      ><%= errors?.password %></small
                    >
                    <input
                      class="<%= errors?.password ? 'input-error form-control text-white' : ' form-control text-white' %>"
                      type="password"
                      name="password"
                      value="<%= values.password %>"
                      placeholder="Password"
                    />
                  </label>
                </div>

                <button class="btn btn-outline-light w-100 mt-3" type="submit">
                  Register
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
