<!doctype html>
<html lang="en">
<head>
  <%- include ('../partials/head')%>
</head>
<body>

<div class="g-user-reg-area">
  <div class="container">
    <div class="row">
      <div class="col-md-5 mx-auto">
        <div class="g-user-reg-main">

          <div class="text-center text-black-50">
            <h3 class="text-white">User Registrations</h3>
          </div>
          <form method="post" action="<%= actionRoute %>">
            <div class="text-center">
              <p class="error-message text-danger"><%= errorMessage %></p>
            </div>
            <div class="form-group">
              <label for="firstName">First Name</label>
              <input
                      class="<%= errors?.firstName ? 'input-error form-control text-white' : ' form-control text-white' %>"
                      type="text"
                      name="firstName"
                      value="<%= fields.firstName %>"
                      placeholder="First Name"
              />
              <span class="input-error-message text-danger"><%= errors?.firstName %></span>
            </div>

            <div class="form-group">
              <label for="lastName">Last Name</label>
              <input
                      class="<%= errors?.lastName ? 'input-error form-control text-white' : ' form-control text-white' %>"
                      type="text"
                      name="lastName"
                      value="<%= fields.lastName %>"
                      placeholder="Last Name"
              />
              <span class="input-error-message text-danger"><%= errors?.lastName %></span>
            </div>

            <div class="form-group">
              <label for="email">email</label>
              <input
                      class="<%= errors?.email ? 'input-error form-control text-white' : ' form-control text-white' %>"
                      type="text"
                      name="email"
                      value="<%= fields.email %>"
                      placeholder="Email"
              />
              <span class="input-error-message text-danger"><%= errors?.email %></span>
            </div>

            <div class="form-group">
              <label for="password">Password</label>
              <input
                      class="<%= errors?.password ? 'input-error form-control text-white' : ' form-control text-white' %>"
                      type="text"
                      name="password"
                      value="<%= fields.password %>"
                      placeholder="Password"
              />
              <span class="input-error-message text-danger"><%= errors?.password %></span>
            </div>

            <button class="btn btn-success" type="submit">Register</button>
          </form>

        </div>
      </div>
    </div>
  </div>
</div>


</body>
</html>
